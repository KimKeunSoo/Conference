{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": { "*": ["node_modules/*"] },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
